{
  "name": "tailoring-whatsapp-bot",
  "version": "2.1.0",
  "description": "Lightweight WhatsApp automation for tailoring shop - Render optimized",
  "main": "server.js",
  "scripts": {
    "start": "node --max-old-space-size=256 server.js",
    "dev": "node server.js",
    "build": "echo 'No build step required'",
    "preinstall": "npm config set fetch-retry-mintimeout 20000 && npm config set fetch-retry-maxtimeout 120000 && npm config set fetch-timeout 300000",
    "postinstall": "echo 'Installation completed successfully'",
    "clean": "rm -rf node_modules package-lock.json && npm cache clean --force",
    "clean-install": "npm run clean && npm install",
    "test-deploy": "chmod +x check-deployment.sh && ./check-deployment.sh",
    "local-setup": "chmod +x start.sh && npm install && npm run dev"
  },
  "config": {
    "puppeteer_skip_chromium_download": "false"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bottleneck": "^2.19.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "puppeteer": "^22.15.0",
    "qrcode": "^1.5.3",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.25.0"
  },
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "tailoring",
    "automation",
    "render",
    "nodejs"
  ],
  "author": "Saurabh Tanwar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrsaurabhtanwar/tailoring-whatsapp-bot"
  }
}

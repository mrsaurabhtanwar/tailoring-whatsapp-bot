PORT=3000
NODE_ENV=production
MAX_OLD_SPACE=512

# Replit/Nix Chromium path (optional). Leave empty to auto-detect.
# Common paths: /run/current-system/sw/bin/chromium or /usr/bin/chromium
CHROME_PATH=
# whatsapp-web.js uses puppeteer (core) under the hood; we pick up CHROME_PATH automatically if set

# WhatsApp session directory (persisted in repo or Replit storage)
SESSION_PATH=.wwebjs_auth

# Throttle between message sends (ms)
SEND_DELAY_MS=600
